        <DockPanel Width="266" DockPanel.Dock="Left">
            <local:ColorMap x:Name="ColorMap"
                            Margin="5"
                            A="{Binding A.Value, Mode=OneWay}"
                            Saturation="{Binding Saturation.Value, Mode=TwoWay}"
                            Source="{Binding WhiteBlackColorMap}"
                            Color="{Binding Output.Value, Mode=OneWayToSource}"
                            Value="{Binding Value.Value, Mode=TwoWay}" />
        </DockPanel>
        <DockPanel Width="280">
            <Grid DockPanel.Dock="Top">
                <Grid Width="256" Height="100" />
                <Grid>
                    <Rectangle Width="75"
                               Height="75"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="None"
                                         TileMode="Tile"
                                         Viewport="0,0,16,16"
                                         ViewportUnits="Absolute">
                                <VisualBrush.Visual>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="8" />
                                        </Grid.RowDefinitions>
                                        <Rectangle Grid.Row="0"
                                                   Grid.Column="0"
                                                   Fill="#EEE" />
                                        <Rectangle Grid.Row="0"
                                                   Grid.Column="1"
                                                   Fill="#AAA" />
                                        <Rectangle Grid.Row="1"
                                                   Grid.Column="0"
                                                   Fill="#AAA" />
                                        <Rectangle Grid.Row="1"
                                                   Grid.Column="1"
                                                   Fill="#EEE" />
                                    </Grid>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Width="75"
                               Height="75"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="{Binding ElementName=ColorMap, Path=Color}" />
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </Grid>
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Source={x:Static helper:ResourceService.Current}, Path=Resources.String_Hue, Mode=OneWay}" />
                    <TextBox Width="25"
                             Height="20"
                             DockPanel.Dock="Right"
                             Text="{Binding ElementName=Hue_Slider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Right" />
                    <local:ColorSlider x:Name="Hue_Slider"
                                       VerticalAlignment="Center"
                                       BackgroundBitmapSource="{Binding HueSelector}"
                                       Maximum="180"
                                       Minimum="0"
                                       Value="{Binding Hue.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Source={x:Static helper:ResourceService.Current}, Path=Resources.String_A, Mode=OneWay}" />
                    <TextBox Width="25"
                             DockPanel.Dock="Right"
                             Text="{Binding A.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToByteConverter}}"
                             TextAlignment="Right" />
                    <local:ColorSlider x:Name="A_Slider"
                                       VerticalAlignment="Center"
                                       BackgroundBitmapSource="{Binding ASelector}"
                                       Maximum="255"
                                       Minimum="0"
                                       Value="{Binding A.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Source={x:Static helper:ResourceService.Current}, Path=Resources.String_R, Mode=OneWay}" />
                    <TextBox Width="25"
                             Height="20"
