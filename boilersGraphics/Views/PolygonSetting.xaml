<UserControl x:Class="boilersGraphics.Views.PolygonSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:boilersGraphics.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:converter="clr-namespace:boilersGraphics.Converters"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:IntToStringConverter x:Key="IntToStringConverter" />
    </UserControl.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Right">
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Top">
                <Label Content="Start X" />
                <TextBox Text="{Binding StartPointX.Value, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToStringConverter}}"
                         Width="50" />
                <Label Content="Start Y" />
                <TextBox Text="{Binding StartPointY.Value, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToStringConverter}}"
                         Width="50" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Bottom"
                        HorizontalAlignment="Right">
                <Button Content="追加"
                        Command="{Binding AddCornerCommand}"
                        Width="75"
                        Height="25"
                        Margin="5" />
                <Button Content="描画"
                        Command="{Binding DrawCommand}"
                        Width="75"
                        Height="25"
                        Margin="5" />
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Corners}"
                          DockPanel.Dock="Top">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label>
                                <Label.Content>
                                    <TextBlock>
                                        <Run Text="#" />
                                        <Run Text="{Binding Number.Value}" />
                                    </TextBlock>
                                </Label.Content>
                            </Label>
                            <Label Content="角度(°)" />
                            <TextBox Text="{Binding Angle.Value, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToStringConverter}}"
                                     HorizontalContentAlignment="Right"
                                     Width="50" />
                            <Label Content="半径" />
                            <TextBox Text="{Binding Radius.Value, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToStringConverter}}"
                                     HorizontalContentAlignment="Right"
                                     Width="50" />
                            <Button Content="削除"
                                    Command="{Binding DataContext.RemoveCornerCommand, RelativeSource={RelativeSource AncestorType=local:PolygonSetting}}"
                                    CommandParameter="{Binding}" />
                            <Label Content="{Binding Point.Value}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>
        <Path Width="100"
              Height="100"
              Fill="Black"
              Stroke="Black"
              StrokeThickness="1"
              ClipToBounds="False">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="{Binding StartPoint.Value, UpdateSourceTrigger=PropertyChanged}"
                                IsClosed="True"
                                Segments="{Binding Segments.Value, UpdateSourceTrigger=PropertyChanged}">
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </DockPanel>
</UserControl>
