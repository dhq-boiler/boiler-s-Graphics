                <Button
                    Command="{Binding DataContext.RemoveGradientStopCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=local:LinearGradientBrushPicker}}"
                    CommandParameter="{Binding}"
                    DockPanel.Dock="Right">
                    ×
                </Button>
            </DockPanel>
        </DataTemplate>
