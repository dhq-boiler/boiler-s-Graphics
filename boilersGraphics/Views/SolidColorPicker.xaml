        <DockPanel Width="266" DockPanel.Dock="Left">
            <local:ColorMap
                x:Name="ColorMap"
                Margin="5"
                A="{Binding A.Value, Mode=OneWay}"
                Saturation="{Binding Saturation.Value, Mode=TwoWay}"
                Source="{Binding WhiteBlackColorMap}"
                Color="{Binding Output.Value, Mode=OneWayToSource}"
                Value="{Binding Value.Value, Mode=TwoWay}" />
        </DockPanel>
        <DockPanel Width="280">
            <Grid DockPanel.Dock="Top">
                <Grid Width="256" Height="100" />
                <Grid>
                    <Rectangle
                        Width="75"
                        Height="75"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <VisualBrush
                                Stretch="None"
                                TileMode="Tile"
                                Viewport="0,0,16,16"
                                ViewportUnits="Absolute">
                                <VisualBrush.Visual>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="8" />
                                        </Grid.RowDefinitions>
                                        <Rectangle
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Fill="#EEE" />
                                        <Rectangle
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Fill="#AAA" />
                                        <Rectangle
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Fill="#AAA" />
                                        <Rectangle
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Fill="#EEE" />
                                    </Grid>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle
                        Width="75"
                        Height="75"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="{Binding Color, ElementName=ColorMap}" />
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </Grid>
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label
                        Width="65"
                        Content="{Binding Resources.String_Hue, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}"
                        DockPanel.Dock="Left"
                        Foreground="White" />
                    <TextBox
                        Width="25"
                        Height="20"
                        DockPanel.Dock="Right"
                        Text="{Binding Value, ElementName=Hue_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <local:ColorSlider
                        x:Name="Hue_Slider"
                        VerticalAlignment="Center"
                        AutomationProperties.AutomationId="Hue"
                        BackgroundBitmapSource="{Binding HueSelector}"
                        Maximum="180"
                        Minimum="0"
                        Value="{Binding Hue.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label
                        Width="65"
                        Content="{Binding Resources.String_A, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}"
                        DockPanel.Dock="Left"
                        Foreground="White" />
                    <TextBox
                        Width="25"
                        DockPanel.Dock="Right"
                        Text="{Binding A.Value, Converter={StaticResource StringToByteConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <local:ColorSlider
                        x:Name="A_Slider"
                        VerticalAlignment="Center"
                        AutomationProperties.AutomationId="Alpha"
                        BackgroundBitmapSource="{Binding ASelector}"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding A.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label
                        Width="65"
                        Content="{Binding Resources.String_R, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}"
                        DockPanel.Dock="Left"
                        Foreground="White" />
                    <TextBox
                        Width="25"
                        Height="20"
                        DockPanel.Dock="Right"
                        Text="{Binding Value, ElementName=Red_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <local:ColorSlider
                        x:Name="Red_Slider"
                        VerticalAlignment="Center"
                        AutomationProperties.AutomationId="Red"
                        BackgroundBitmapSource="{Binding RedSelector}"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding R.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label
                        Width="65"
                        Content="{Binding Resources.String_G, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}"
                        DockPanel.Dock="Left"
                        Foreground="White" />
                    <TextBox
                        Width="25"
                        Height="20"
                        DockPanel.Dock="Right"
                        Text="{Binding Value, ElementName=Green_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <local:ColorSlider
                        x:Name="Green_Slider"
                        VerticalAlignment="Center"
                        AutomationProperties.AutomationId="Green"
                        BackgroundBitmapSource="{Binding GreenSelector}"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding G.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label
                        Width="65"
                        Content="{Binding Resources.String_B, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}"
                        DockPanel.Dock="Left"
                        Foreground="White" />
                    <TextBox
                        Width="25"
                        Height="20"
                        DockPanel.Dock="Right"
                        Text="{Binding Value, ElementName=Blue_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <local:ColorSlider
                        x:Name="Blue_Slider"
                        VerticalAlignment="Center"
                        AutomationProperties.AutomationId="Blue"
                        BackgroundBitmapSource="{Binding BlueSelector}"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding B.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel>
                    <Button
                        Width="75"
                        Height="25"
                        Margin="5"
                        AutomationProperties.AutomationId="OK"
                        Command="{Binding Path=DataContext.OKCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=view:ColorPicker}}"
                        Content="OK"
                        DockPanel.Dock="Right" />
                    <Button
                        Width="50"
                        Height="25"
                        Command="{Binding OpenCloseColorPalleteCommand}"
                        DockPanel.Dock="Left">
                        <StackPanel Orientation="Horizontal">
                            <Label FontSize="10">
                                <Label.Style>
                                    <Style TargetType="{x:Type Label}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ColorPalleteVisibility.Value}" Value="Visible">
                                                <Setter Property="Content" Value="▲" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ColorPalleteVisibility.Value}" Value="Collapsed">
                                                <Setter Property="Content" Value="▼" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                            <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/Assets/img/art-pallete.png" />
                        </StackPanel>
                    </Button>
                    <DockPanel />
                </DockPanel>
            </DockPanel>
        </DockPanel>
    </DockPanel>
</UserControl>

