                                        <Rectangle Grid.Row="1"
                                                   Grid.Column="0"
                                                   Fill="#AAA" />
                                        <Rectangle Grid.Row="1"
                                                   Grid.Column="1"
                                                   Fill="#EEE" />
                                    </Grid>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Width="75"
                               Height="75"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="{Binding Color, ElementName=ColorMap}" />
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
            </Grid>
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Resources.String_Hue, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}" />
                    <TextBox Width="25"
                             Height="20"
                             DockPanel.Dock="Right"
                             Text="{Binding Value, ElementName=Hue_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Right" />
                    <local:ColorSlider x:Name="Hue_Slider"
                                       VerticalAlignment="Center"
                                       BackgroundBitmapSource="{Binding HueSelector}"
                                       Maximum="180"
                                       Minimum="0"
                                       Value="{Binding Hue.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Resources.String_A, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}" />
                    <TextBox Width="25"
                             DockPanel.Dock="Right"
                             Text="{Binding A.Value, Converter={StaticResource StringToByteConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Right" />
                    <local:ColorSlider x:Name="A_Slider"
                                       VerticalAlignment="Center"
                                       BackgroundBitmapSource="{Binding ASelector}"
                                       Maximum="255"
                                       Minimum="0"
                                       Value="{Binding A.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Resources.String_R, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}" />
                    <TextBox Width="25"
                             Height="20"
                             DockPanel.Dock="Right"
                             Text="{Binding Value, ElementName=Red_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Right" />
                    <local:ColorSlider x:Name="Red_Slider"
                                       VerticalAlignment="Center"
                                       BackgroundBitmapSource="{Binding RedSelector}"
                                       Maximum="255"
                                       Minimum="0"
                                       Value="{Binding R.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Resources.String_G, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}" />
                    <TextBox Width="25"
                             Height="20"
                             DockPanel.Dock="Right"
                             Text="{Binding Value, ElementName=Green_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Right" />
                    <local:ColorSlider x:Name="Green_Slider"
                                       VerticalAlignment="Center"
                                       BackgroundBitmapSource="{Binding GreenSelector}"
                                       Maximum="255"
                                       Minimum="0"
                                       Value="{Binding G.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Label Width="65"
                           DockPanel.Dock="Left"
                           Foreground="White"
                           Content="{Binding Resources.String_B, Mode=OneWay, Source={x:Static helper:ResourceService.Current}}" />
                    <TextBox Width="25"
                             Height="20"
                             DockPanel.Dock="Right"
                             Text="{Binding Value, ElementName=Blue_Slider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Right" />
                    <local:ColorSlider x:Name="Blue_Slider"
                                       VerticalAlignment="Center"
                                       BackgroundBitmapSource="{Binding BlueSelector}"
                                       Maximum="255"
                                       Minimum="0"
                                       Value="{Binding B.Value, Mode=TwoWay}" />
                </DockPanel>
                <DockPanel>
                    <Button Width="75"
                            Height="25"
                            Margin="5"
                            Command="{Binding OkCommand}"
                            Content="OK"
                            DockPanel.Dock="Right" />
                    <Button Width="50"
                            Height="25"
                            Command="{Binding OpenCloseColorPalleteCommand}"
                            DockPanel.Dock="Left">
                        <StackPanel Orientation="Horizontal">
                            <Label FontSize="10">
                                <Label.Style>
                                    <Style TargetType="{x:Type Label}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ColorPalleteVisibility.Value}" Value="Visible">
                                                <Setter Property="Content" Value="▲" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ColorPalleteVisibility.Value}" Value="Collapsed">
                                                <Setter Property="Content" Value="▼" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                            <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/Assets/img/art-pallete.png" />
                        </StackPanel>
                    </Button>
                    <DockPanel />
                </DockPanel>
            </DockPanel>
        </DockPanel>
    </DockPanel>
</UserControl>
