<UserControl x:Class="boilersGraphics.Views.ColorCorrect.ToneCurve"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:boilersGraphics.Views.ColorCorrect"
             mc:Ignorable="d">
    <DockPanel>
            <Grid Width="300" Height="300">
                <Path Stroke="Black" StrokeThickness="1">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,300">
                                <PolyBezierSegment Points="{Binding Points, UpdateSourceTrigger=PropertyChanged}"></PolyBezierSegment>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Grid>
    </DockPanel>
</UserControl>
