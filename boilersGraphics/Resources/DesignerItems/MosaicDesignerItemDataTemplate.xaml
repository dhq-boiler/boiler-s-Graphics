<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:boilersGraphics.Converters"
    xmlns:effects="clr-namespace:boilersGraphics.Controls.Effects"
    xmlns:viewModel="clr-namespace:boilersGraphics.ViewModels">
    <DataTemplate DataType="{x:Type viewModel:MosaicViewModel}">
        <Border BorderBrush="{Binding EdgeBrush.Value}" BorderThickness="{Binding EdgeThickness.Value}">
            <Image
                x:Name="baseGrid"
                IsHitTestVisible="{Binding IsHitTestVisible.Value, UpdateSourceTrigger=PropertyChanged}"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="{Binding Bitmap.Value, UpdateSourceTrigger=PropertyChanged}" />
        </Border>
    </DataTemplate>
</ResourceDictionary>