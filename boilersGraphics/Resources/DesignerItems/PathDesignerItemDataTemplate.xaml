<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:boilersGraphics.ViewModels">
    <DataTemplate DataType="{x:Type viewModel:PathDesignerItemViewModel}">
        <Path Stroke="{Binding EdgeColor.Value}"
              StrokeThickness="{Binding EdgeThickness.Value}"
              IsHitTestVisible="False"
              Fill="{Binding FillColor.Value}"
              Data="{Binding Points}" />
    </DataTemplate>
</ResourceDictionary>