<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:boilersGraphics.ViewModels">
    <DataTemplate DataType="{x:Type viewModel:PathDesignerItemViewModel}">
        <Path Data="{Binding Points}"
              Fill="{Binding FillColor.Value}"
              IsHitTestVisible="False"
              Stroke="{Binding EdgeColor.Value}"
              StrokeThickness="{Binding EdgeThickness.Value}" />
    </DataTemplate>
</ResourceDictionary>