<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:boiler_sGraphics.ViewModels">
    <DataTemplate DataType="{x:Type viewModel:PathDesignerItemViewModel}">
        <Path Stroke="{Binding EdgeColor}"
              StrokeThickness="1"
              Fill="{Binding FillColor}"
              Data="{Binding Points}" />
    </DataTemplate>
</ResourceDictionary>